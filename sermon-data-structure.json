{
  "sermon_structure": {
    "description": "Complete structure for PredicApp sermon data",
    "fields": {
      "id": {
        "type": "string",
        "required": true,
        "example": "s004",
        "description": "Unique identifier for the sermon"
      },
      "title": {
        "type": "string",
        "required": true,
        "example": "Duminica Vameșului și Fariseului",
        "description": "Sermon title in Romanian"
      },
      "category": {
        "type": "string",
        "required": true,
        "example": "Predici Liturgice",
        "description": "Main category of the sermon"
      },
      "subcategory": {
        "type": "string",
        "required": false,
        "example": "Triodion",
        "description": "Subcategory (e.g., Triodion, Pentecostarion)"
      },
      "audio_url": {
        "type": "string",
        "required": true,
        "example": "https://prediciduminica-r2.lightsongjs.workers.dev/audio/sermon.mp3",
        "description": "URL to audio file (MP3 or Opus)",
        "note": "Future: Convert to Opus 48kbps for 75-85% size reduction"
      },
      "type": {
        "type": "string",
        "required": true,
        "enum": ["fixed", "movable"],
        "description": "Fixed date (e.g., saints) or movable (based on Pascha)"
      },
      "fixed_month": {
        "type": "number",
        "required": false,
        "example": 1,
        "description": "Month (1-12) for fixed date sermons"
      },
      "fixed_day": {
        "type": "number",
        "required": false,
        "example": 7,
        "description": "Day of month for fixed date sermons"
      },
      "pascha_offset": {
        "type": "number",
        "required": false,
        "example": -70,
        "description": "Days before/after Pascha (for movable feasts)"
      },
      "duration": {
        "type": "string",
        "required": false,
        "example": "24:00",
        "description": "Duration in MM:SS or HH:MM:SS format"
      },
      "gospelReading": {
        "type": "string",
        "required": false,
        "example": "Luca 18:10-14",
        "description": "Gospel reading reference"
      },
      "liturgicalDate": {
        "type": "string",
        "required": false,
        "example": "2026-02-01",
        "description": "Date when this sermon should be shown (YYYY-MM-DD)"
      },
      "description": {
        "type": "string",
        "required": false,
        "example": "Predică la Duminica Vameșului și Fariseului",
        "description": "Short description of the sermon"
      },
      "year": {
        "type": "number",
        "required": false,
        "example": 2016,
        "description": "Year the sermon was recorded"
      },
      "image": {
        "type": "string",
        "required": false,
        "example": "https://example.com/icon.jpg",
        "description": "URL to sermon artwork/icon",
        "note": "Future: Replace with Orthodox icons from Wikimedia Commons"
      }
    }
  },
